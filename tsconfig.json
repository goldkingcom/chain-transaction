{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "lib": ["es6", "dom"]  // 添加 dom 类型以支持 window 对象
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
